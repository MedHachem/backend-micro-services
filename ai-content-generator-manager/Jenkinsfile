pipeline {
    agent any

    environment {
        IMAGE_NAME = "hachem27/ai-content-generator-manager"
        DOCKER_TAG = "1.0.0"
        NAMESPACE = "nip"
    }

    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'main', description: 'Branche √† builder')
         choice(name: 'ACTION', choices: ['build', 'deploy'], description: 'Choisir build ou deploy')
    }

    stages {

        stage('Checkout') {
            steps {
                echo "‚û°Ô∏è Checkout branche : ${params.BRANCH_NAME}"
                git branch: "${params.BRANCH_NAME}",
                    url: "https://github.com/MedHachem/backend-micro-services.git"
            }
        }

        stage('Navigate to MS') {
            steps {
                dir('ai-content-generator-manager') {
                    echo "‚û°Ô∏è On travaille dans ai-content-generator-manager"
                }
            }
        }

        stage('Build Maven') {
        when { expression { params.ACTION == 'build' } }
            steps {
                dir('ai-content-generator-manager') {
                    echo "‚û°Ô∏è Maven clean package"
                    sh "mvn clean package -DskipTests"
                }
            }
        }

        stage('Build Docker Image') {
        when { expression { params.ACTION == 'build' } }
            steps {
                dir('ai-content-generator-manager') {
                    echo "‚û°Ô∏è Build Docker image avec tag ${DOCKER_TAG}"
                    sh "docker build -t ${IMAGE_NAME}:${DOCKER_TAG} ."
                }
            }
        }

        stage('Docker Login') {
        when { expression { params.ACTION == 'build' } }
            steps {
                echo "‚û°Ô∏è Login Docker Hub"
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh "echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin"
                }
            }
        }

        stage('Push Docker Image') {
        when { expression { params.ACTION == 'build' } }
            steps {
                dir('ai-content-generator-manager') {
                    echo "‚û°Ô∏è Push Docker image vers Docker Hub"
                    sh "docker push ${IMAGE_NAME}:${DOCKER_TAG}"
                }
            }
        }

        stage('Cleanup') {
        
        when { expression { params.ACTION == 'build' } }
            steps {
                echo "‚û°Ô∏è Nettoyage des images locales"
                sh "docker rmi ${IMAGE_NAME}:${DOCKER_TAG} || true"
            }
        }
        
            stage('Deploy to Kubernetes') {
                                            when { expression { params.ACTION == 'deploy' } }
                                            steps {
                                                dir('ai-content-generator-manager/k8s') {
                                                    echo "‚û°Ô∏è D√©ploiement dans Kubernetes"
                                                     sh "kubectl create namespace ${NAMESPACE} || true"
                                                     sh "kubectl apply -f config-map.yaml -n ${NAMESPACE}"
                                                     sh "kubectl apply -f secret.yaml -n ${NAMESPACE}"
                                                    sh "kubectl apply -f ai-content-generator-manager-deployment.yaml -n ${NAMESPACE}"
                                                    sh "kubectl apply -f ai-content-generator-manager.yaml -n ${NAMESPACE}"
                                                    sh "kubectl rollout restart deployment ai-content-generator-manager -n ${NAMESPACE}"
                                                }
                                            }
                                        }
    }

    post {
        success {
            echo "‚úÖ Pipeline r√©ussi ! Docker image push√©e : ${IMAGE_NAME}:${DOCKER_TAG}"
        }
        failure {
            echo "‚ùå Pipeline √©chou√© ! V√©rifie les logs."
        }
        always {
            echo "üîÑ Fin du pipeline."
        }
    }
}
